@model List<AcunMedyaAkademiPortfolio.Models.TblService>
@{
    ViewBag.Title = "ServiceList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hizmetler Listesi</h2>
<table class="table table-bordered" style="width: 100%;">
    <tr>
        <th>Hizmet ID</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Resim Yolu</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ServiceID</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.ImageUrl</td>
            <td><a href="#" class="btn btn-outline-success">Güncelle</a></td>
            <td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-outline-danger">Sil</a></td>
        </tr>
    }
</table>
<a href="/Service/CreateService/" class="btn btn-outline-primary">Hizmet Ekle</a>
