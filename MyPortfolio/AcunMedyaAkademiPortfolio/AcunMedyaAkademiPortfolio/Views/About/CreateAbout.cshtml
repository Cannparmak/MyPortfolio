
@{
    ViewBag.Title = "CreateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hakkımda Ekle</h2>
<form method="post">
    <label>Hakkımda Başlığı</label>
    <input type="text" class="table table-bordered" name="Title" />
    <br />
    <label>Hakkımda Açıklaması</label>
    <textarea rows="4" class="table table-bordered" name="Description"></textarea>
    <br />
    <label>Hakkımda Resim Yolu</label>
    <input type="text" class="table table-bordered" name="Image" />
    <br />
    <button class="btn btn-info">Kaydet</button>
</form>
